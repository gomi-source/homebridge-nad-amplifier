{
  "pluginAlias": "NadAmplifier",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "NAD Amplifier"
      },
      "volumeCap": {
        "tite": "Cap the volume to avoid accidentally blasting at 100% (I'm looking at you, Siri)",
        "type": "number",
        "required": false,
        "default": 60
      },
      "http": {
        "title": "HTTP",
        "type": "object",
        "properties": {
          "basePath": {
            "title": "Base path to the HTTP server",
            "type": "string",
            "required": true,
            "default": "http://127.0.0.1:8080/s-nad/v1"
          },
          "username": {
            "title": "Username",
            "type": "string"
          },
          "password": {
            "title": "Password",
            "type": "string"
          }
        }
      },
      "mqtt": {
        "title": "MQTT",
        "type": "object",
        "properties": {
          "host": {
            "title": "Host",
            "type": "string",
            "required": true,
            "default": "localhost"
          },
          "port": {
            "title": "Port",
            "type": "number",
            "required": true,
            "default": 1883
          },
          "username": {
            "title": "Username",
            "type": "string"
          },
          "password": {
            "title": "Password",
            "type": "string"
          },
          "topicBase": {
            "title": "Topic Prefix",
            "type": "string",
            "default": "tele/control/nad"
          }
        }
      }
    }
  }
}
