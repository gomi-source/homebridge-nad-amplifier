{
  "pluginAlias": "NadAmplifier",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "NAD Amplifier"
      },
      "inputs": {
        "title": "Inputs",
        "type": "array",
        "items": {
          "type": "object", 
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "description": "Human readable name for the input",
              "required": true
            },
            "sourceNumber": {
              "title": "Source Number",
              "description": "The source number for the input. This is the number used in the NAD remote control.",
              "type": "integer",
              "minimum": 1,
              "maximum": 9,
              "required": true
            }
          }
        }
      },
      "http": {
        "title": "HTTP",
        "type": "object",
        "properties": {
          "basePath": {
            "title": "Base path to the HTTP server",
            "type": "string",
            "required": true,
            "default": "http://127.0.0.1:8080/s-nad/v1"
          },
          "username": {
            "title": "Username",
            "type": "string"
          },
          "password": {
            "title": "Password",
            "type": "string"
          }
        }
      },
      "mqtt": {
        "title": "MQTT",
        "type": "object",
        "properties": {
          "host": {
            "title": "Host",
            "type": "string",
            "required": true,
            "default": "localhost"
          },
          "port": {
            "title": "Port",
            "type": "number",
            "required": true,
            "default": 1883
          },
          "username": {
            "title": "Username",
            "type": "string"
          },
          "password": {
            "title": "Password",
            "type": "string"
          },
          "topicBase": {
            "title": "Topic Prefix",
            "type": "string",
            "default": "tele/control/nad"
          }
        }
      }
    }
  }
}
